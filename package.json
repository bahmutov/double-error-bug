{
  "name": "@imtbl/design-system",
  "version": "3.0.0",
  "description": "A repository to house all design system components utilised inside of IMX GUI",
  "unminified-main": "dist/unminified/index.js",
  "unminified-module": "dist/unminified/index.es.js",
  "main": "dist/minified/index.js",
  "module": "dist/minified/index.es.js",
  "jsnext:main": "dist/minified/index.es.js",
  "types": "dist/minified/src/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "git@github.com:immutable/imx-design-system.git",
  "author": "Tim Paul <tim@glo.id.au>",
  "license": "MIT",
  "engines": {
    "npm": "^7.0.0",
    "node": "^14.0.0"
  },
  "scripts": {
    "start:demo": "webpack serve --config ./internals/webpack/webpack.demo.config.js",
    "build:demo": "webpack --config ./internals/webpack/webpack.demo.build.config.js",
    "clear-dists": "rm -rf dist/",
    "prebuild:lib": "npm run clear-dists",
    "prebuild:lib:watch": "npm run clear-dists",
    "build:lib:watch": "NODE_ENV=production BABEL_ENV=production rollup --config ./internals/rollup/rollup.prod.config.js --watch",
    "build:lib": "NODE_ENV=production BABEL_ENV=production rollup --config ./internals/rollup/rollup.prod.config.js",
    "build:lib:unminified": "NODE_ENV=development BABEL_ENV=development rollup --config ./internals/rollup/rollup.storybook.config.js",
    "build": "npm run build:lib; npm run build:lib:unminified",
    "lint": "npm run typecheck && npm run lint:eslint",
    "lint:css": "stylelint './src/**/*.{js,ts,tsx}'",
    "lint:eslint:quiet": "eslint --ext .ts,.tsx,.js,.jsx --quiet .",
    "lint:eslint": "eslint --ext .ts,.tsx,.js,.jsx .",
    "lint:eslint:fix": "eslint --ext .ts,.tsx,.js,.jsx --fix .",
    "typecheck": "tsc --noEmit",
    "test:clean": "rm -rf ./coverage; rm -rf ./.nyc_output",
    "pretest": "npm run test:clean && npm run lint",
    "test": "npm run test:run -- --env coverage=true",
    "test:fast": "npm run test:run",
    "test:watch": "cypress open-ct --browser electron",
    "test:run": "cypress run-ct",
    "posttest": "npx nyc report --check-coverage"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run lint:eslint:fix",
      "git add --force"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add --force"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged && npm run typecheck"
    }
  },
  "peerDependencies": {
    "bignumber.js": "^9.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "@emotion/css": "^11.0.0",
    "date-fns": "^2.17.0",
    "emoji-regex": "^9.1.1",
    "framer-motion": "^4.1.17",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "postcss-import": "^14.0.0",
    "react-is": "^17.0.2",
    "resize-observer-polyfill": "^1.5.1",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/runtime": "^7.12.5",
    "@cypress/code-coverage": "^3.9.6",
    "@cypress/react": "^5.9.1",
    "@cypress/webpack-dev-server": "^1.3.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-url": "^6.0.0",
    "@types/classnames": "^2.2.11",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.14.6",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/react-is": "^17.0.0",
    "@types/react-router-dom": "^5.1.6",
    "@types/uuid": "^8.3.0",
    "@types/webpack": "^4.41.22",
    "@types/webpack-env": "^1.15.3",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "babel-preset-react-app": "^10.0.0",
    "bignumber.js": "^9.0.1",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^2.0.0",
    "cypress": "^7.5.0",
    "cypress-real-events": "^1.5.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "html-webpack-plugin": "5.0.0",
    "husky": "4.3.6",
    "lint-staged": "10.5.4",
    "mini-css-extract-plugin": "^1.6.0",
    "next": "^10.1.3",
    "nyc": "^15.1.0",
    "postcss": "^8.2.14",
    "postcss-loader": "^4.0.4",
    "postcss-mixins": "^7.0.3",
    "prettier": "^2.1.2",
    "prettier-eslint": "^12.0.0",
    "react": "^17.0.2",
    "react-app-polyfill": "^2.0.0",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "rollup": "^2.42.1",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.2.1",
    "stylelint-config-recommended": "3.0.0",
    "stylelint-config-standard": "^20.0.0",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.4",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  }
}
